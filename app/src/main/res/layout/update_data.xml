<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name2"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/roll_number2"
        android:layout_below="@+id/name2"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/semester2"
        android:layout_below="@+id/roll_number2"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save2"
        android:id="@+id/button4"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/semester2"
        android:layout_centerHorizontal="true"
        android:onClick="save2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/name2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll Number"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/roll_number2"
        android:layout_alignStart="@+id/textView2"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/semester2"
        android:layout_alignStart="@+id/textView2"
        android:textSize="25dp" />

</RelativeLayout>